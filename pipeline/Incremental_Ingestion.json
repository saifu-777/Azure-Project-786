{
	"name": "Incremental_Ingestion",
	"properties": {
		"activities": [
			{
				"name": "Last_cdc",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"dataset": {
						"referenceName": "Json_dynamics",
						"type": "DatasetReference",
						"parameters": {
							"container": {
								"value": "@pipeline().parameters.lookup_container",
								"type": "Expression"
							},
							"folder": {
								"value": "@pipeline().parameters.lookup_folder",
								"type": "Expression"
							},
							"file": {
								"value": "@pipeline().parameters.lookup_file",
								"type": "Expression"
							}
						}
					},
					"firstRowOnly": false
				}
			},
			{
				"name": "current",
				"type": "SetVariable",
				"dependsOn": [],
				"policy": {
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"variableName": "current",
					"value": {
						"value": "@utcNow()",
						"type": "Expression"
					}
				}
			},
			{
				"name": "Copy data SQL to bronze layer",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "current",
						"dependencyConditions": [
							"Succeeded"
						]
					},
					{
						"activity": "Last_cdc",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"sqlReaderQuery": {
							"value": "SELECT * FROM @{pipeline().parameters.schema}.@{pipeline().parameters.table} WHERE @{pipeline().parameters.col_cdc} > '@{activity('Last_cdc').output.value[0].cdc}'",
							"type": "Expression"
						},
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "ParquetSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "ParquetWriteSettings"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "AzureSql",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "Parquet_dynamics",
						"type": "DatasetReference",
						"parameters": {
							"sink_container": {
								"value": "@pipeline().parameters.bronze_container",
								"type": "Expression"
							},
							"sink_folder": {
								"value": "@pipeline().parameters.bronze_folder",
								"type": "Expression"
							},
							"sink_file": {
								"value": "@concat(pipeline().parameters.table, '_', variables('current'))",
								"type": "Expression"
							}
						}
					}
				]
			},
			{
				"name": "IfNewdata",
				"type": "IfCondition",
				"dependsOn": [
					{
						"activity": "Copy data SQL to bronze layer",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@greater(activity('max_cdc script').output.dataRead,0 )",
						"type": "Expression"
					},
					"ifTrueActivities": [
						{
							"name": "max_cdc script",
							"type": "Script",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"linkedServiceName": {
								"referenceName": "AzureSqlDatabase1",
								"type": "LinkedServiceReference"
							},
							"typeProperties": {
								"scripts": [
									{
										"type": "Query",
										"text": {
											"value": "SELECT MAX(@{pipeline().parameters.col_cdc}) AS max_cdc FROM @{pipeline().parameters.schema}.@{pipeline().parameters.table}",
											"type": "Expression"
										}
									}
								],
								"scriptBlockExecutionTimeout": "02:00:00"
							}
						},
						{
							"name": "update_Last_cdc",
							"type": "Copy",
							"dependsOn": [
								{
									"activity": "max_cdc script",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "JsonSource",
									"additionalColumns": [
										{
											"name": "cdc",
											"value": {
												"value": "@activity('max_cdc script').output.resultSets[0].rows[0].max_cdc",
												"type": "Expression"
											}
										}
									],
									"storeSettings": {
										"type": "AzureBlobFSReadSettings",
										"recursive": true,
										"enablePartitionDiscovery": false
									},
									"formatSettings": {
										"type": "JsonReadSettings"
									}
								},
								"sink": {
									"type": "JsonSink",
									"storeSettings": {
										"type": "AzureBlobFSWriteSettings"
									},
									"formatSettings": {
										"type": "JsonWriteSettings"
									}
								},
								"enableStaging": false
							},
							"inputs": [
								{
									"referenceName": "Json_dynamics",
									"type": "DatasetReference",
									"parameters": {
										"container": {
											"value": "@pipeline().parameters.lookup_container",
											"type": "Expression"
										},
										"folder": {
											"value": "@pipeline().parameters.lookup_folder",
											"type": "Expression"
										},
										"file": "empty.json"
									}
								}
							],
							"outputs": [
								{
									"referenceName": "Json_dynamics",
									"type": "DatasetReference",
									"parameters": {
										"container": {
											"value": "@pipeline().parameters.lookup_container",
											"type": "Expression"
										},
										"folder": {
											"value": "@pipeline().parameters.lookup_folder",
											"type": "Expression"
										},
										"file": {
											"value": "@pipeline().parameters.lookup_file",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
			}
		],
		"parameters": {
			"schema": {
				"type": "string",
				"defaultValue": "dbo"
			},
			"table": {
				"type": "string",
				"defaultValue": "DimUser"
			},
			"col_cdc": {
				"type": "string",
				"defaultValue": "updated_at"
			},
			"lookup_container": {
				"type": "string",
				"defaultValue": "bronze"
			},
			"lookup_folder": {
				"type": "string",
				"defaultValue": "cdc"
			},
			"bronze_container": {
				"type": "string",
				"defaultValue": "bronze"
			},
			"bronze_folder": {
				"type": "string",
				"defaultValue": "User"
			},
			"lookup_file": {
				"type": "string",
				"defaultValue": "cdc.json"
			}
		},
		"variables": {
			"current": {
				"type": "String"
			}
		},
		"annotations": []
	}
}